[MAIN]
# Minimum score to pass (default is 10.0)
fail-under=7.0

[MESSAGES CONTROL]
disable=
    # Pre-existing: pylint can't resolve torch submodules
    no-name-in-module,
    # Pylint can't find torch_geometric, tree_sitter, sklearn in pre-commit env
    import-error,
    # False positive: F.cosine_similarity IS callable
    not-callable,
    # Script names like 01_explore_bcb use numbered prefixes intentionally
    invalid-name,
    # Scripts share boilerplate (sys.path.insert, logging setup)
    duplicate-code,
    # Imports after sys.path.insert() are necessary for the package to resolve
    wrong-import-position,
    wrong-import-order,
    import-outside-toplevel,
    # Standard ML patterns: classes/functions naturally have many params/attributes
    too-many-instance-attributes,
    too-many-arguments,
    too-many-positional-arguments,
    too-many-locals,
    too-many-statements,
    too-many-branches,
    too-few-public-methods,
    # `import torch.nn as nn` is the universal PyTorch convention
    consider-using-from-import

[FORMAT]
max-line-length=120
