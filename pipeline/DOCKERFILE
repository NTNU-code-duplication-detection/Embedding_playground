FROM ubuntu:24.04

ENV DEBIAN_FRONTEND=noninteractive
ENV TZ=Etc/UTC

# Core tools
RUN apt-get update && apt-get install -y --no-install-recommends \
    ca-certificates curl git unzip zip \
    python3 python3-pip \
    maven gradle \
    && rm -rf /var/lib/apt/lists/*

# Install Temurin JDK 21
# (Using Adoptium repo for a stable JDK 21 package)
RUN apt-get update && apt-get install -y --no-install-recommends \
    wget gnupg \
    && wget -qO- https://packages.adoptium.net/artifactory/api/gpg/key/public | gpg --dearmor > /usr/share/keyrings/adoptium.gpg \
    && echo "deb [signed-by=/usr/share/keyrings/adoptium.gpg] https://packages.adoptium.net/artifactory/deb noble main" > /etc/apt/sources.list.d/adoptium.list \
    && apt-get update && apt-get install -y --no-install-recommends temurin-21-jdk \
    && rm -rf /var/lib/apt/lists/*

ENV JAVA_HOME=/usr/lib/jvm/temurin-21-jdk-amd64
ENV PATH="${JAVA_HOME}/bin:${PATH}"

# Vineflower
ARG VINEFLOWER_VERSION=1.11.2
RUN mkdir -p /opt/vineflower \
    && curl -L -o /opt/vineflower/vineflower.jar \
       "https://github.com/Vineflower/vineflower/releases/download/${VINEFLOWER_VERSION}/vineflower-${VINEFLOWER_VERSION}.jar"
       # Use 1.11.2, this link works

WORKDIR /work

# Python deps
COPY requirements.txt /work/requirements.txt
RUN pip3 install --no-cache-dir -r /work/requirements.txt

# Pipeline script
COPY pipeline.py /work/pipeline.py

ENTRYPOINT ["python3", "/work/pipeline.py"]